{
  "name": "Biblio",
  "version": "0.0.1",
  "main": "main.js",
  "author": "niceprogramming <thing@discord.com>",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "start": "webpack --config webpack.config.prod.js && electron .",
    "start:dev": "cross-env NODE_ENV=development electron .",
    "test": "jest",
    "flow": "flow"
  },
  "dependencies": {
    "flow": "^0.2.3",
    "flow-typed": "^2.4.0",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "styled-components": "^3.3.2"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-jest": "^23.0.1",
    "babel-loader": "^7.1.4",
    "babel-plugin-styled-components": "^1.5.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "clean-webpack-plugin": "^0.1.19",
    "cross-env": "^5.1.6",
    "electron": "^2.0.2",
    "electron-devtools-installer": "^2.2.4",
    "express": "^4.16.3",
    "flow-babel-webpack-plugin": "^1.1.1",
    "flow-bin": "^0.74.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.1.0",
    "react-hot-loader": "^4.3.0",
    "react-testing-library": "^3.1.4",
    "regenerator-runtime": "^0.11.1",
    "webpack": "^4.11.1",
    "webpack-cli": "^3.0.3",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-hot-middleware": "^2.22.2",
    "webpack-merge": "^4.1.2"
  },
  "jest": {
    "modulePaths": [
      "/shared/vendor/modules"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|my-project|redux-persist)/)"
    ],
    "moduleDirectories": [
      "node_modules",
      "bower_components",
      "shared"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "^react(.*)$": "<rootDir>/node_modules/React$1",
      "^config$": "<rootDir>/configs/app-config.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js",
      "\\.(gif|ttf|eot|svg)$": "<rootDir>/__mocks__/fileMock.js"
    }
  }
}
